{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Topic Extension",
  "description": "Topic Extension",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [{
    "css": [
      "css/topic.css"
    ],
    "js" : ["js/content-script.js"],
    "matches": [
      "*://localhost/*",
      "*://*/*"
    ]
  }],
  "commands": {
    "RUN_TOPIC_SINGLE": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Run \"run topic single\" on the current page."
    },
    "RUN_TOPIC_LIST_SINGLE": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "Alt+L"
      },
      "description": "Run \"run topic list single\" on the current page."
    },
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+S",
        "mac": "Alt+S",
        "chromeos": "Alt+S",
        "linux": "Alt+S"
      }
    }
  },
  "web_accessible_resources": [{
    "resources": ["js/*"], 
    "matches": ["<all_urls>"]
  }],
  "permissions": [
    "activeTab",
    "contextMenus",
    "downloads",
    "scripting",
    "tabs",
    "webRequest",
    "storage",
    "offscreen",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "images/topic48.png",
    "48": "images/topic48.png",
    "128": "images/topic48.png"
  },
  "action": {
    "default_icon": {
      "16": "images/topic48.png",
      "24": "images/topic48.png",
      "32": "images/topic48.png"
    },
    "default_title": "Extension",
    "default_popup": "popup.html"
  }
}